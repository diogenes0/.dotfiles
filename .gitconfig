[credential]
	helper = store

[pull]
	rebase = false

[user]
	name = George Hosono
	email = georgehosono@gmail.com

[init]
	defaultBranch = main

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
	line-numbers = true

[merge]
    conflictstyle = diff3

[diff]
	tool = vimdiff
    colorMoved = default
